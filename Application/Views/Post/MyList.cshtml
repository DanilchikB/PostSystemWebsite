<!--Show user's posts-->
@model paginationPage.Models.ListPages
@{
    ViewData["Title"] = "List";  
}
<div class = "center">
<div class="btn-group mt-4" role="group" aria-label="Basic example">
    <a asp-controller="Post" asp-action="List" class="btn btn-primary text-white">
        List
    </a>
    <a asp-controller="Post" asp-action="MyList" class="btn btn-primary text-white">
        My list
    </a>
    <a asp-controller = "Post" asp-action="Create" class="btn btn-success text-white">
        Create
    </a>
</div>
</div>
<div class = "posts">
@foreach (var item in Model.Posts) { 
<div class="card">
<h5 class="card-header text-white bg-primary">Post</h5>
<div class="card-body">
    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
    <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
    <div class="row">
        <div class = "col-5">
            <a asp-controller="Post" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">More details</a>
        </div>
        <div class = "col-7 text-right">
            <a asp-controller="Post" asp-action="Edit" asp-route-id="@item.Id" class="btn
            btn-success">
                Edit
            </a>
            <a asp-controller="Post" asp-action="Delete" asp-route-id="@item.Id" class="btn
            btn-danger">
                Delete
            </a>
        </div>
    </div>
  </div>
  <div class="card-footer text-right">
      <span class="card-title text-right">by @Html.DisplayFor(modelItem => item.User.Login)</span>
  </div>
</div>
<br>
}  
</div> 
<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center mb-5">

    <li class="page-item">
      <a class="page-link" href="#" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    @for(int i = 1; i <= Model.PageCount;i++){
      @if(Model.ActualPage == i){
        <li class="page-item active"><a class="page-link" asp-controller="Post" asp-action="MyList" asp-route-page="@i">@i</a></li>
      }else{
        <li class="page-item"><a class="page-link" asp-controller="Post" asp-action="MyList" asp-route-page="@i">@i</a></li>
      }

    }
    <li class="page-item">
      <a class="page-link" href="#" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>
