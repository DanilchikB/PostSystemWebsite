@using MvcLike.Models
@model MvcUser.Models.User
@{
    ViewData["Title"] = "User";
}
<div class = "posts user">
    <div class="center-block container text-center">
        @if(@Model.Id == Int32.Parse(User.Identity.Name)){
            <div class = "avatar center-block my-page" data-toggle="modal" data-target="#AddPhoto"></div>
            <div>@Model.Username</div>
            <a asp-controller = "post" asp-action="mylist" class="btn btn-success text-white">My posts</a>
            @await Html.PartialAsync("_AddPhoto");
        }else{
            <div class = "avatar center-block"></div>
            <div>@Model.Username</div>
            <a asp-controller = "post" asp-action="list" class="btn btn-primary text-white">View posts</a>
        }
    </div>
</div>